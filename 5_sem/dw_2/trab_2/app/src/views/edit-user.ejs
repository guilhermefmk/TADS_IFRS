<%- include('includes/head') %>

<body>
    <%- include('includes/nav') %>

    <h1>Editar Usuário</h1>

    <form action="/users/<%= user.id %>/edit" method="POST">
        <div>
            <label for="name">Nome:</label>
            <input type="text" name="name" value="<%= user.name %>" required />
        </div>
        <div>
            <label for="email">Email:</label>
            <input type="email" name="email" value="<%= user.email %>" required />
        </div>
        <div>
            <label for="role">Papel:</label>
            <select name="role" required>
                <option value="USER" <%= user.role === 'USER' ? 'selected' : '' %>>Usuário</option>
                <option value="ADMIN" <%= user.role === 'ADMIN' ? 'selected' : '' %>>Administrador</option>
            </select>
        </div>
        <div>
            <label for="modules">Módulos:</label>
            <% const availableModules = ['Financeiro', 'Relatórios', 'Produtos']; %> <!-- Módulos disponíveis -->
            <% availableModules.forEach(module => { %>
                <div>
                    <label>
                        <input 
                            type="checkbox" 
                            name="modules" 
                            value="<%= module %>" 
                            <%= user.modules.includes(module) ? 'checked' : '' %> 
                        />
                        <%= module %>
                    </label>
                </div>
            <% }) %>
        </div>
        <div>
            <label for="password">Senha (deixe em branco para não alterar):</label>
            <input type="password" name="password" />
        </div>
        <button type="submit">Salvar</button>
    </form>

    <a href="/users">Voltar para a lista de usuários</a>
</body>
</html>
